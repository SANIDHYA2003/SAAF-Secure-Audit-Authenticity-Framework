**Code: `frontend/src/pages/ManufacturerDashboard.jsx`**

```javascript
import React, { useState, useEffect } from 'react';
import axios from 'axios';
import { ethers } from 'ethers';

function ManufacturerDashboard() {
  const [batches, setBatches] = useState([]);
  const [kpis, setKpis] = useState({
    batchesCreated: 0,
    unitsProduced: 0,
    revenueRealized: 0
  });

  useEffect(() => {
    loadDashboardData();
  }, []);

  const loadDashboardData = async () => {
    try {
      const response = await axios.get('/api/manufacturer/dashboard', {
        headers: { Authorization: `Bearer ${localStorage.getItem('token')}` }
      });
      
      setKpis(response.data.kpis);
      setBatches(response.data.batches);
    } catch (error) {
      console.error('Error loading dashboard:', error);
    }
  };

  const handleCreateBatch = async () => {
    const productName = prompt('Product name:');
    const quantity = prompt('Quantity:');
    
    if (!productName || !quantity) return;

    try {
      // Sign transaction with MetaMask
      const { ethereum } = window;
      const provider = new ethers.BrowserProvider(ethereum);
      const signer = provider.getSigner();

      // Call backend to create batch
      const response = await axios.post('/api/batch/create', 
        { productName, quantity },
        { headers: { Authorization: `Bearer ${localStorage.getItem('token')}` } }
      );

      alert('Batch created successfully!');
      loadDashboardData();
    } catch (error) {
      alert('Error creating batch: ' + error.message);
    }
  };

  return (
    <div className="manufacturer-dashboard">
      <h1>Manufacturer Dashboard - Cipla Mumbai</h1>

      {/* KPI Cards */}
      <div className="kpi-cards">
        <div className="card">
          <h3>{kpis.batchesCreated}</h3>
          <p>Batches Created</p>
        </div>
        <div className="card">
          <h3>{kpis.unitsProduced}</h3>
          <p>Units Produced</p>
        </div>
        <div className="card">
          <h3>â‚¹{kpis.revenueRealized}</h3>
          <p>Revenue Realized</p>
        </div>
      </div>

      {/* Action Buttons */}
      <div className="actions">
        <button onClick={handleCreateBatch}>+ Create Batch</button>
        <button>View Inventory</button>
        <button>Reports</button>
      </div>

      {/* Batches Table */}
      <div className="batches-table">
        <h2>Recent Batches</h2>
        <table>
          <thead>
            <tr>
              <th>Batch ID</th>
              <th>Product</th>
              <th>Quantity</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {batches.map(batch => (
              <tr key={batch._id}>
                <td>{batch.batchId}</td>
                <td>{batch.productName}</td>
                <td>{batch.quantity}</td>
                <td>{batch.status}</td>
                <td>
                  <button>View</button>
                  <button>Track</button>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  );
}

export default ManufacturerDashboard;
```

